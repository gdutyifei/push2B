
.header {
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  background: #FBFBFF;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.header .item {
  float: left;
  width: 25%;
  text-align: center;
  color: #404040;
  font-size: 36rpx;
}

.header .selected {
  background: #0D7EFB !important;
  color: #FBFBFF !important;
}

.total, .yesterday, .seven, .thiry {
  margin-top: 95rpx;
}

.digital-content {
  background-color: #FBFBFF;
}
.digital {
  display: flex;
  margin: 0 21rpx;
}

.table {
  width: 200rpx;
  height: 230rpx;
  background: #FBFBFF;
  box-shadow: 0 3rpx 13rpx 4rpx rgba(117,118,126,0.18);
  border-radius: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 24rpx 21rpx;
}

.inline-table {
  width: 186rpx;
  height: 216rpx;
  border: 2rpx solid #7E7E7E;
  text-align: center;
}

.table-title {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #404040;
  letter-spacing: 0;
  margin: 42rpx 0 36rpx 0;
}

.table-data {
  font-family: Helvetica;
  font-size: 36rpx;
  color: #202A34;
  letter-spacing: 0;
}

.pie {
  background: #FBFBFF;
  border: 1px solid #DBDFE7;
  border-radius: 4px;
  width: 90%;
  height: 540rpx;
  margin: 30rpx auto;
}

#pieCanvas {
  height: 480rpx;
  width: 480rpx;
}

.chart-header {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #404040;
  letter-spacing: 0;
  text-align: center;
  margin-top: 28rpx;
}
